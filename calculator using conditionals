    <center>
    <div style = "width: 500px; height: 500px; background-color: rgb(137, 174, 230); border: 10px solid rgb(187, 192, 240);">
    <div style = "display: flex; width: 500px; height: 50px; background-color: rgb(21, 30, 111);">
        
        <input type = "text" id = "input1" style = "width: 250%; height: 40px; border: 1cap solid rgb(21, 30, 111)";>
        <input type = "text" id = "input2" style = "width: 250%; height: 40px; border: 1cap solid rgb(21, 30, 111)";>
    </div>
    <input type = "text" id = "ans" style = "height: 40px; margin-bottom: 10px;margin-top: 20px; border: 2px solid rgb(67, 47, 122); background-color: rgb(233, 210, 255);";>
    
    <div style = "display: flex; width: 500px; height: 75px; justify-content: center; align-items: center; background-color: rgb(137, 174, 230);">
    <button onclick =" Calculator('+')" style="width: 20%; position: absolute; top: 22%; background-color: rgb(194, 166, 221); font-weight: bold; border: 3px solid rgb(21, 30, 111); font-family:Arial,'Arial Narrow Bold'; font-size: larger;">+</button>
    </div>
    <div style = "display: flex; width: 500px; height: 75px; justify-content: center; align-items: center; background-color: rgb(137, 174, 230);">
    <button onclick = "Calculator('-')"style ="width: 20%; position: absolute; top: 33%; background-color: rgb(194, 166, 221); font-weight: bold; border: 3px solid rgb(21, 30, 111); font-family:Arial,'Arial Narrow Bold'; font-size: larger;">-</button>
    </div>
    <div style = "display: flex; width: 500px; height: 75px; justify-content: center; align-items: center; background-color: rgb(137, 174, 230);">
    <button onclick = "Calculator('*')" style ="width: 20%; position: absolute;top: 44%; background-color: rgb(194, 166, 221); font-weight: bold; border: 3px solid rgb(21, 30, 111); font-family:Arial,'Arial Narrow Bold'; font-size: larger;">*</button>
    </div>
    <div style = "display: flex; width: 500px; height: 85px; justify-content: center; align-items: center; background-color: rgb(137, 174, 230);">
    <button onclick = "Calculator('/')" style ="width: 20%; position: absolute; top: 55%; background-color: rgb(194, 166, 221); font-weight: bold; border: 3px solid rgb(21, 30, 111); font-family:Arial,'Arial Narrow Bold'; font-size: larger;">/</button>
    
</div>
    </div>
    </div>

    <script>
        function Calculator(sym){
            let a = parseInt(document.getElementById("input1").value)
            let b = parseInt(document.getElementById("input2").value)
            if (sym == "+")
            {
            let addition = a+b;
            document.getElementById("ans").value = addition
            }
            else if(sym == "-")
            {
           
            let subraction = a-b;
            document.getElementById("ans").value = subraction
   
            }
            else if(sym == "*")
            {
            
            let multiplication = a*b;
            document.getElementById("ans").value = multiplication

            }
            else if(sym == "/")
            {
            
            let division = a/b;
            document.getElementById("ans").value = division
            }
        }

       
        
        
    </script>

    
</center>
    
